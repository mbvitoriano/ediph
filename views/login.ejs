        </form>
      </div>
    </div>
  </div>
</div>


<script>
 var loginImage = function () { //Login image

var log = document.querySelectorAll('.logImage')


for (var i = 0; i < log.length; i++) {
  log[i].style.display = 'none';
}

var num = Math.random() * log.length;
log[parseInt(num)].style.display = 'block';

}
loginImage();

